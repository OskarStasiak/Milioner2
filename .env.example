# Klucze API Coinbase
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_api_secret_here

# ID konta Coinbase
COINBASE_ACCOUNT_ID=your_account_id_here

# Pary kryptowalut do monitorowania
CRYPTO_PAIRS=BTC-USD,ETH-USD,SOL-USD

# Ustawienia WebSocket
WEBSOCKET_URL=wss://ws-feed.pro.coinbase.com

# Ustawienia modelu AI
MODEL_SAVE_PATH=models/
DATA_SAVE_PATH=data/
TRAINING_EPOCHS=100
BATCH_SIZE=32
LEARNING_RATE=0.001

# Ustawienia logowania
